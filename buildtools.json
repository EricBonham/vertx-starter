[
  {
    "id": "maven",
    "file": "pom.xml",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "required": true, "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "required": true, "prefill": "demo" },
      { "key": "version", "label": "Project Version", "required": true, "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "main": "maven/src/main/java/MainVerticle.java",
        "fqcn": true
      },
      {
        "id": "groovy",
        "main":  "maven/src/main/resources/main.groovy"
      },
      {
        "id": "ruby",
        "main":  "maven/src/main/resources/main.rb"
      }
    ],
    "templates": [
      "maven/.gitignore",
      "maven/pom.xml"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "required": true, "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "main": "gradle/src/main/java/MainVerticle.java",
        "fqcn": true
      },
      {
        "id": "groovy",
        "main":  "gradle/src/main/resources/main.groovy"
      },
      {
        "id": "ruby",
        "main":  "gradle/src/main/resources/main.rb"
      }
    ],
    "templates": [
      "gradle/.gitignore",
      "gradle/build.gradle"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "file": "package.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1" }
    ],
    "languages": [
      {
        "id": "javascript",
        "main":  "npm/src/main.js"
      }
    ],
    "templates": [
      "npm/.gitignore",
      "npm/webpack.config.js",
      "npm/package.json"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-js"
    ]
  },

  {
    "id": "stack",
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true }
    ],
    "templates": [
      "stack/vertx-stack.json"
    ],
    "blob": "blobs/stack-min.zip",
    "defaults": [
      "io.vertx:vertx-core"
    ]
  }
]
