[
  {
    "id": "maven",
    "file": "pom.xml",
    "fields" :[
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "groupId", "value": "Maven Group Id", "required": true, "prefill": "com.example" },
      { "key": "artifactId", "value": "Maven Artifact Id", "required": true, "prefill": "demo" },
      { "key": "version", "value": "Project Version", "required": true, "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "main": "maven/src/main/java/MainVerticle.java",
        "fqcn": true
      },
      {
        "id": "groovy",
        "main":  "maven/src/main/resources/main.groovy"
      },
      {
        "id": "ruby",
        "main":  "maven/src/main/resources/main.rb"
      }
    ],
    "templates": [
      "maven/.gitignore",
      "maven/pom.xml"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "groupId", "value": "Project Group", "required": true, "prefill": "com.example" },
      { "key": "version", "value": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "main": "gradle/src/main/java/MainVerticle.java",
        "fqcn": true
      },
      {
        "id": "groovy",
        "main":  "gradle/src/main/resources/main.groovy"
      },
      {
        "id": "ruby",
        "main":  "gradle/src/main/resources/main.rb"
      }
    ],
    "templates": [
      "gradle/.gitignore",
      "gradle/build.gradle"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "file": "package.json",
    "fields": [
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "version", "value": "Project Version", "prefill": "0.0.1" }
    ],
    "languages": [
      {
        "id": "javascript",
        "main":  "npm/src/main.js"
      }
    ],
    "templates": [
      "npm/.gitignore",
      "npm/webpack.config.js",
      "npm/package.json"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-js"
    ]
  },

  {
    "id": "stack",
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "value": "Project Name", "required": true }
    ],
    "templates": [
      "stack/bin/vertx",
      "stack/bin/vertx.bat",
      "stack/conf/default-cluster.xml",
      "stack/conf/logging.properties",
      "stack/pom.xml",
      "stack/vertx-stack.json",
      "stack/README.md"
    ],
    "executables": [
      "stack/bin/vertx"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  }
]
