[
  {
    "id": "maven",
    "file": "pom.xml",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "label": "Maven Artifact Id", "prefill": "demo" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "templates": [
          "maven/src/main/java/{package}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "templates": [
          "maven/src/main/resources/main.groovy"
        ]
      },
      {
        "id": "ruby",
        "templates": [
          "maven/src/main/resources/main.rb"
        ]
      },
      {
        "id": "kotlin",
        "templates": [
          "maven/src/main/kotlin/{package}/MainVerticle.kt"
        ]
      }
    ],
    "templates": [
      "maven/.gitignore",
      "maven/pom.xml"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "gradle",
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "java",
        "templates": [
          "maven/src/main/java/{package}/MainVerticle.java"
        ]
      },
      {
        "id": "groovy",
        "templates": [
          "maven/src/main/resources/main.groovy"
        ]
      },
      {
        "id": "ruby",
        "templates": [
          "maven/src/main/resources/main.rb"
        ]
      },
      {
        "id": "kotlin",
        "templates": [
          "maven/src/main/kotlin/{package}/MainVerticle.kt"
        ]
      }
    ],
    "templates": [
      "gradle/.gitignore",
      "gradle/build.gradle"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  {
    "id": "npm",
    "file": "package.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1" }
    ],
    "languages": [
      {
        "id": "javascript",
        "templates": [
          "npm/src/main.js"
        ]
      },
      {
        "id": "typescript",
        "templates": [
          "npm/tsconfig.json",
          "npm/src/main.ts"
        ]
      }
    ],
    "templates": [
      "npm/.gitignore",
      "npm/webpack.config.js",
      "npm/package.json"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-js"
    ]
  },

  {
    "id": "SBT",
    "non-core-suffix": "-scala_2.12",
    "file": "build.sbt",
    "fields" :[
      { "key": "name", "label": "Project Name", "required": true },
      { "key": "description", "label": "Project Description" },
      { "key": "groupId", "label": "Project Group", "prefill": "com.example" },
      { "key": "version", "label": "Project Version", "prefill": "0.0.1-SNAPSHOT" }
    ],
    "languages": [
      {
        "id": "scala",
        "templates": [
          "sbt/src/main/scala/{package}/MainVerticle.scala"
        ]
      }
    ],
    "templates": [
      "sbt/.gitignore",
      "sbt/.scalafmt",
      "sbt/build.sbt",
      "sbt/project/build.properties",
      "sbt/project/Build.scala",
      "sbt/project/plugins.sbt"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-scala_2.12"
    ]
  },

  {
    "id": "stack",
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "label": "Project Name", "required": true }
    ],
    "templates": [
      "stack/vertx-stack.json"
    ],
    "blob": "blobs/stack-min.zip",
    "defaults": [
      "io.vertx:vertx-core"
    ]
  }
]
