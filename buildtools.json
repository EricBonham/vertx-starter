{
  "maven": {
    "file": "pom.xml",
    "fields" :[
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "groupId", "value": "Maven Group Id", "prefill": "com.example" },
      { "key": "artifactId", "value": "Maven Artifact Id", "prefill": "demo" },
      { "key": "version", "value": "Project Version", "prefill": "0.0.1-SNAPSHOT" },
      { "key": "main", "value": "Main Verticle", "prefill": "com.example.demo.MainVerticle" }
    ],
    "languages": {
      "java": {
        "main": "maven/src/main/java/.java",
        "fqcn": true
      },
      "groovy": {
        "main":  "maven/src/main/resources/.groovy",
        "fqcn": true
      },
      "ruby": {
        "main":  "maven/src/main/resources/.rb",
        "fqcn": true
      }
    },
    "templates": [
      "maven/.gitignore",
      "maven/pom.xml"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  "gradle": {
    "file": "build.gradle",
    "fields" :[
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "version", "value": "Project Version", "prefill": "0.0.1-SNAPSHOT" },
      { "key": "main", "value": "Main Verticle", "prefill": "com.example.demo.MainVerticle" }
    ],
    "languages": {
      "java": {
        "main": "maven/src/main/java/.java",
        "fqcn": true
      }
    },
    "templates": [
      "gradle/.gitignore",
      "gradle/build.gradle"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  },

  "npm": {
    "file": "package.json",
    "fields": [
      { "key": "name", "value": "Project Name", "required": true },
      { "key": "description", "value": "Project Description" },
      { "key": "version", "value": "Project Version", "prefill": "0.0.1" },
      { "key": "main", "value": "Main Verticle", "prefill": "server.js" }
    ],
    "languages": {
      "javascript": {
        "main":  "npm/src/main.js"
      }
    },
    "templates": [
      "npm/.gitignore",
      "npm/webpack.config.js",
      "npm/package.json"
    ],
    "defaults": [
      "io.vertx:vertx-core",
      "io.vertx:vertx-lang-js"
    ]
  },

  "stack": {
    "file": "vertx-stack.json",
    "fields": [
      { "key": "name", "value": "Project Name", "required": true }
    ],
    "templates": [
      "stack/vertx-stack.json",
      "stack/README.md"
    ],
    "defaults": [
      "io.vertx:vertx-core"
    ]
  }
}
