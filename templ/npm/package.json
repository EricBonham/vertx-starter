{
  "name": "{{ metadata.name }}",
  "version": "{{ metadata.version }}",
  {{#if metadata.description}}
  "description": "{{ metadata.description }}",
  {{/if}}

  "mainVerticle": "main.js",

  "scripts": {
    "clean": "rm -Rf .vertx",

    "install": "node ./webpack.config.js",
    "postinstall": "mvn -f .vertx/pom.xml clean package",

    "build": "./node_modules/.bin/webpack",
    "build:release": "npm run build -- -p",

    "prestart": "npm run build",
    "start": "java -jar run.jar",

    "watch": "npm run start -- --redeploy=\"src/**\" --on-redeploy=\"npm run watch\""
  },

  "dependencies": {
  },

  "devDependencies": {
    {{#if metadata.javascript}}
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    {{/if}}
    {{#if metadata.typescript}}
    "typescript": "^2.3.2",
    "ts-loader":"^2.0.3",
    {{/if}}
    "webpack": "^2.2.0"
  },

  "javaDependencies": {
  {{#each selectedDependencies}}
    "{{ groupId }}:{{ artifactId }}": "{{ version }}"{{#unless @last}},{{/unless}}
  {{/each}}
  }
}
